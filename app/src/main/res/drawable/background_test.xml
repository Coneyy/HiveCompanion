<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorPrimaryAlpha"/>
    <item>
        <bitmap android:src="@drawable/background" android:gravity="center" android:alpha="0.6"/>
    </item>
    <item android:top="750dp"
        android:bottom="-400dp"
        android:left="0dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/colorPrimary"/>
            </shape>
        </rotate>
    </item>

</layer-list>